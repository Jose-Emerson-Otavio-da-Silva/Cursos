@page "/Financial/{type}/List"
@using Gestao.Domain.Enums

@attribute [Authorize]
@rendermode InteractiveAuto
@inject IFinancialTransactionRepository FinancialTransactionRepository
@inject IConfiguration Configuration
@inject ILocalStorageService LocalStorage

<PageTitle>Contas a @(Type == "Pay" ? "Pagar" : "Receber") - Listar</PageTitle>


<div class="container-fluid py-2">
    <div class="row">
        <div class="col-lg-12">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">Contas a @(Type == "Pay" ? "Pagar" : "Receber")</h4>
                </div>

                <div class="card-body">
                    <!-- Linha de busca e botão de cadastrar -->
                    <div class="d-flex justify-content-between flex-wrap gap-2 mb-3 align-items-center">
                        <div class="col-lg-4 p-0">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Buscar por descrição..."
                                    @bind="SearchWord">
                                <button class="btn btn-outline-success" type="button" @onclick="OnSearch">
                                    <i class="ri-search-line"></i> Pesquisar
                                </button>
                            </div>
                        </div>

                        <!-- Botão de cadastrar movido para cá -->
                        <a href="/Financial/@Type/Add" class="btn btn-primary btn-sm">
                            <i class="ri-add-line me-1"></i> Cadastrar
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Data da competência</th>
                                    <th class="text-center">Descrição</th>
                                    <th class="text-center">Valor</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Paginated == null)
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">Carregando...</td>
                                    </tr>
                                }
                                else if (Paginated.Items.Count == 0)
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">Nenhum registro!</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var item in Paginated.Items)
                                    {
                                        <tr>
                                            <td>@item.ReferenceDate.ToString("dd/MM/yyyy")</td>
                                            <td class="text-center">@item.Description</td>
                                            <td class="text-center">@(item.AmountPaid.HasValue ?
                                                                                item.AmountPaid.Value.ToString("C") : @item.Amount.HasValue?
                                                                                @item.Amount!.Value.ToString("C") : "-")</td>
                                            <td class="text-center">
                                                <a href="/Financial/@Type/Edit/@item.Id" class="btn btn-sm btn-soft-info me-1"
                                                    title="Editar">
                                                    <i class="ri-pencil-line"></i>
                                                </a>
                                                <a href="/Financial/@Type/Detail/@item.Id" class="btn btn-sm btn-soft-danger"
                                                    title="Excluir">
                                                    <i class="ri-delete-bin-line"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <Pagination Paginated="@Paginated" OnPageChanged="@OnPageChanged" />
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public string? Type { get; set; }
    private TypeFinancialTransaction TypeFinancial { get; set; } = TypeFinancialTransaction.Pay;
    private int PageIndex = 1;
    private int PageSize;
    private string SearchWord = string.Empty;
    private Company? company;
    private PaginatedList<FinancialTransaction>? Paginated;

    protected override void OnInitialized()
    {
        PageSize = Configuration.GetValue<int>("Pagination:PageSize", 1);
    }
    //Pegao o parâmetro do TypeFinancial assim que ele é atribuido e converte para o enum
    protected override void OnParametersSet()
    {
        if (Type != null && Enum.TryParse(Type, true, out TypeFinancialTransaction typeConverted))
        {
            TypeFinancial = typeConverted;
        }
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        company = await LocalStorage.GetItemAsync<Company>(AppConstants.LocalStorageCompany);
        await LoadDataAsync();
        StateHasChanged();
    }

    private async Task OnSearch()
    {
        PageIndex = 1;
        await LoadDataAsync();
    }

    private async Task OnPageChanged(int pageNumber)
    {
        PageIndex = pageNumber;
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        if (company is not null)
            Paginated = await FinancialTransactionRepository.GetAll(
            company!.Id, TypeFinancial, PageIndex, PageSize, SearchWord);
    }
}







