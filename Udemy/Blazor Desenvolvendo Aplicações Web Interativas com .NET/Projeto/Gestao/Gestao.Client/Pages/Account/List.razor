@page "/Account/List"

@attribute [Authorize]
@rendermode InteractiveAuto
@inject IAccountRepository AccountRepository
@inject IConfiguration Configuration
@inject ILocalStorageService LocalStorage

<PageTitle>Conta - Listar</PageTitle>


<div class="container-fluid py-2">
    <div class="row">
        <div class="col-lg-12">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">Contas</h4>
                </div>

                <div class="card-body">
                    <!-- Linha de busca e botão de cadastrar -->
                    <div class="d-flex justify-content-between flex-wrap gap-2 mb-3 align-items-center">
                        <div class="col-lg-4 p-0">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Buscar por nome da empresa"
                                    @bind="SearchWord">
                                <button class="btn btn-outline-success" type="button" @onclick="OnSearch">
                                    <i class="ri-search-line"></i> Pesquisar
                                </button>
                            </div>
                        </div>

                        <!-- Botão de cadastrar movido para cá -->
                        <a href="/Account/Add" class="btn btn-primary btn-sm">
                            <i class="ri-add-line me-1"></i> Cadastrar
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Descrição</th>
                                    <th class="text-center">Data de inicio</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Paginated == null)
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">Carregando...</td>
                                    </tr>
                                }
                                else if (Paginated.Items.Count == 0)
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">Nenhum registro!</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var item in Paginated.Items)
                                    {
                                        <tr>
                                            <td>@item.Description</td>
                                            <td class="text-center">@item.BalanceDate.ToString("dd/MM/yyyy")</td>
                                            <td class="text-center">
                                                <a href="/Account/Edit/@item.Id" class="btn btn-sm btn-soft-info me-1"
                                                    title="Editar">
                                                    <i class="ri-pencil-line"></i>
                                                </a>
                                                <a href="/Account/Detail/@item.Id" class="btn btn-sm btn-soft-danger"
                                                    title="Excluir">
                                                    <i class="ri-delete-bin-line"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <Pagination Paginated="@Paginated" OnPageChanged="@OnPageChanged" />
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    private int PageIndex = 1;
    private int PageSize;
    private string SearchWord = string.Empty;
    private Company? company;
    private PaginatedList<Account>? Paginated;

    protected override async Task OnInitializedAsync()
    {
        //Blazor Server pega o usuário logado via SignInManager
        //Blazor WebAssembly pega o usuário logado via AuthenticationStateProvider
        PageSize = Configuration.GetValue<int>("Pagination:PageSize", 1);

    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        company = await LocalStorage.GetItemAsync<Company>(AppConstants.LocalStorageCompany);
        await LoadDataAsync();
        StateHasChanged();
    }

    private async Task OnSearch()
    {
        PageIndex = 1;
        await LoadDataAsync();
    }

    private async Task OnPageChanged(int pageNumber)
    {
        PageIndex = pageNumber;
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        if (company is not null)
            Paginated = await AccountRepository.GetAll(company!.Id, PageIndex, PageSize, SearchWord);
    }
}