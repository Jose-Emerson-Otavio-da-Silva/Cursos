@typeparam T

@if (Paginated == null)
{
    <div>Carregando paginação...</div>
}
else if (Paginated.TotalPages > 0 && Paginated != null)
{
    <div class="d-flex flex-wrap align-items-center justify-content-between mt-3">
        <div class="text-muted small">
            Mostrando página <span class="fw-semibold">@(Paginated.TotalPages == 0 ? "0" : @Paginated.PageIndex)</span> de
            <span class="fw-semibold">@Paginated.TotalPages</span>
        </div>
        <nav>
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(Paginated.PageIndex == 1 ? "disabled" : "")"><button
                        @onclick="() => NavigateToPage(Paginated.PageIndex - 1)" class="page-link">←</button></li>
                @for (int i = 1; i <= Paginated.TotalPages; i++)
                {
                    var j = i;
                    <li class="page-item @(Paginated.PageIndex == j ? "active" : "")">
                        <button @onclick="() => NavigateToPage(j)" class="page-link">@j</button>
                    </li>
                }
                <li class="page-item @(Paginated.PageIndex == Paginated.TotalPages ? "disabled" : "")"><button
                        @onclick="() => NavigateToPage(Paginated.PageIndex + 1)" class="page-link">→</button></li>
            </ul>
        </nav>
    </div>
}

@code {
    [Parameter] public PaginatedList<T> Paginated { get; set; } = null!;
    [Parameter] public EventCallback<int> OnPageChanged { get; set; }

    private async Task NavigateToPage(int pageNumber)
    {
        if (pageNumber < 1 || pageNumber > Paginated.TotalPages) return;

        await OnPageChanged.InvokeAsync(pageNumber);
    }

}