@code {
    [Parameter] public int Id { get; set; }

    [SupplyParameterFromForm]
    private Category Category { get; set; } = new();

    protected override async Task OnParametersSetAsync()
    {
        var category = await CategoryRepository.Get(Id);
        if (category is not null)
            Category = category;
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (Category.Id == 0)
            {
                await JS.InvokeVoidAsync("ShowToast", "Alerta", "Conta não encontrada!", "warning", "/Category/List");
                return;
            }
            var Company = await LocalStorage.GetItemAsync<Company>(AppConstants.LocalStorageCompany);
            if (Category!.CompanyId != Company!.Id)
            {
                await JS.InvokeVoidAsync("ShowToast",
                "Alerta.", $"A conta não pertence à empresa {Company.LegalName}", "warning", "/Category/List");
            }
        }
    }
    private async Task Submit()
    {
        //Salvar
        await CategoryRepository.Update(Category);

        //Informar e redirecionar
        // Exibir toast e redirecionar depois que o usuário fechar
        await JS.InvokeVoidAsync("ShowToast",
        "Concluido!", "Conta alterada com sucesso!", "info", "/Category/List");
    }
}