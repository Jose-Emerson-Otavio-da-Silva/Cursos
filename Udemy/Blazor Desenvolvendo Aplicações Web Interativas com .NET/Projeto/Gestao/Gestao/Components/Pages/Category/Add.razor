@page "/Category/Add"
@using Blazored.LocalStorage.StorageOptions

@rendermode InteractiveServer
@inject IJSRuntime JS
@inject NavigationManager NavigationManager
@inject ICategoryRepository CategoryRepository
@inject ILocalStorageService LocalStorage


<PageTitle>Categoria - Cadastrar</PageTitle>

<div class="container-fluid py-2">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary border-bottom-0 d-flex align-items-center justify-content-between">
                    <h4 class="card-title mb-0 text-white">Cadastrar Categoria</h4>
                </div>
                <div class="card-body">
                    <EditForm Model="Category" OnValidSubmit="Submit" FormName="Register">
                        <DataAnnotationsValidator />
                        <div class=" row g-3">
                            <div class="col-xxl-3 col-md-6">
                                <label for="name" class="form-label fw-semibold">Nome</label>
                                <InputText @bind-Value="Category!.Name" autocomplete="off" class="form-control"
                                    id="name" placeholder="Digite a descrição/nome da Categoria" />
                                <ValidationMessage For="() => Category!.Name" />
                            </div>
                        </div>
                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a href="/Category/List" class="btn btn-outline-secondary px-4">Voltar</a>
                            <button type="submit" class="btn btn-outline-success px-4">Salvar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [SupplyParameterFromForm]
    private Category? Category { get; set; } = new();
    private Company? Company;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        Company = await LocalStorage.GetItemAsync<Company>(AppConstants.LocalStorageCompany);
    }
    private async Task Submit()
    {
        //Tratar dados
        Category!.CreatedAt = DateTimeOffset.Now;
        Category.CompanyId = Company!.Id;

        //Salvar
        await CategoryRepository.Add(Category);

        //Informar e redirecionar
        // Exibir toast e redirecionar depois que o usuário fechar
        await JS.InvokeVoidAsync("ShowToast",
        "Sucesso", "Categoria cadastrada com sucesso!", "info", "/Category/List");
    }

}