@page "/Category/Detail/{id:int}"

@rendermode InteractiveServer
@inject IJSRuntime JS
@inject NavigationManager NavigationManager
@inject ICategoryRepository CategoryRepository
@inject ILocalStorageService LocalStorage

<PageTitle>Categoria - Confirmar Exclusão</PageTitle>

<div class="container-fluid py-2">
    <div class="row ">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0 ">
                <div class="card-header bg-danger border-bottom-0 d-flex align-items-center justify-content-between">
                    <h4 class="card-title mb-0 text-white">Confirmar exclusão da Categoria</h4>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-warning border-warning d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-2 fs-5"></i>
                        <div>
                            Tem certeza de que deseja <strong>excluir esta Categoria</strong>? Esta ação é
                            <strong>irreversível</strong>.
                        </div>
                    </div>

                    <h5 class="fw-bold text-primary mt-4 mb-3">
                        <i class="bi bi-building me-2"></i>Detalhes da Categoria
                    </h5>

                    <div class="row g-3 small text-secondary">
                        <div class="col-md-6 col-lg-4">
                            <label class="fw-semibold text-dark">Nome:</label><br />
                            <span>@Category!.Name</span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a href="/Category/List" class="btn btn-outline-secondary px-4">Voltar</a>
                        <button @onclick="Remove" type="button" class="btn btn-soft-danger px-4">
                            <i class="ri-delete-bin-line"></i>Excluir Categoria
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Category Category { get; set; } = new();

    protected override async Task OnParametersSetAsync()
    {
        var category = await CategoryRepository.Get(Id);
        if (category is not null)
            Category = category;
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (Category.Id == 0)
            {
                await JS.InvokeVoidAsync("ShowToast", "Alerta", "Categoria não encontrada!", "warning", "/Category/List");
                return;
            }
            var Company = await LocalStorage.GetItemAsync<Company>(AppConstants.LocalStorageCompany);
            if (Category!.CompanyId != Company!.Id)
            {
                await JS.InvokeVoidAsync("ShowToast",
                "Alerta.", $"A Categoria não pertence à empresa {Company.LegalName}", "warning", "/Category/List");
            }
        }
    }
    private async Task Remove()
    {
        //Salvar
        await CategoryRepository.Delete(Category.Id);

        //Informar e redirecionar
        // Exibir toast e redirecionar depois que o usuário fechar
        await JS.InvokeVoidAsync("ShowToast",
        "Sucesso", "Categoria excluída com sucesso!", "info", "/Category/List");
    }
}