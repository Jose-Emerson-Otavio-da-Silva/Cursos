@page "/Company/Add"
@rendermode InteractiveServer
@inject IJSRuntime JS

<PageTitle>Cadastro de Empresa</PageTitle>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0 d-flex align-items-center justify-content-between">
                    <h4 class="card-title mb-0 text-primary fw-bold">Cadastrar Empresa</h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-xxl-3 col-md-6">
                            <label for="razaosocial" class="form-label fw-semibold">Razão Social</label>
                            <input type="text" autocomplete="off" class="form-control" id="razaosocial"
                                placeholder="Digite a razão social">
                        </div>

                        <div class="col-xxl-3 col-md-6">
                            <label for="nomefantasia" class="form-label fw-semibold">Nome Fantasia</label>
                            <input type="text" autocomplete="off" class="form-control" id="nomefantasia"
                                placeholder="Digite o nome fantasia">
                        </div>

                        <div class="col-xxl-3 col-md-6">
                            <label for="cnpj" class="form-label fw-semibold">CNPJ</label>
                            <input type="text" autocomplete="off" class="form-control" id="cnpj"
                                placeholder="00.000.000/0000-00">
                        </div>

                        <div class="col-xxl-3 col-md-6">
                            <label for="cep" class="form-label fw-semibold">CEP</label>
                            <input type="text" autocomplete="off" class="form-control" id="cep" placeholder="00000-000">
                        </div>

                        <div class="col-xxl-3 col-md-6">
                            <label for="estado" class="form-label fw-semibold">Estado</label>
                            <input type="text" disabled class="form-control bg-light" id="estado" placeholder="Estado">
                        </div>

                        <div class="col-xxl-3 col-md-6">
                            <label for="cidade" class="form-label fw-semibold">Cidade</label>
                            <input type="text" disabled class="form-control bg-light" id="cidade" placeholder="Cidade">
                        </div>

                        <div class="col-xxl-3 col-md-6">
                            <label for="bairro" class="form-label fw-semibold">Bairro</label>
                            <input type="text" disabled class="form-control bg-light" id="bairro" placeholder="Bairro">
                        </div>

                        <div class="col-xxl-6 col-md-6">
                            <label for="endereco" class="form-label fw-semibold">Endereço</label>
                            <input type="text" autocomplete="off" class="form-control" id="endereco"
                                placeholder="Digite o endereço">
                        </div>

                        <div class="col-xxl-3 col-md-6">
                            <label for="complemento" class="form-label fw-semibold">Complemento</label>
                            <input type="text" autocomplete="off" class="form-control" id="complemento"
                                placeholder="Apartamento, bloco, etc.">
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a href="/Company/List" class="btn btn-outline-secondary px-4">Voltar</a>
                        <button class="btn btn-primary px-4">Salvar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


