@page "/Account/Detail/{id:int}"

@rendermode InteractiveServer
@inject IJSRuntime JS
@inject NavigationManager NavigationManager
@inject IAccountRepository AccountRepository
@inject ILocalStorageService LocalStorage

<PageTitle>Conta - Confirmar Exclusão</PageTitle>

<div class="container-fluid py-2">
    <div class="row ">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0 ">
                <div class="card-header bg-danger border-bottom-0 d-flex align-items-center justify-content-between">
                    <h4 class="card-title mb-0 text-white">Confirmar exclusão da Conta</h4>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-warning border-warning d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-2 fs-5"></i>
                        <div>
                            Tem certeza de que deseja <strong>excluir esta Conta</strong>? Esta ação é
                            <strong>irreversível</strong>.
                        </div>
                    </div>

                    <h5 class="fw-bold text-primary mt-4 mb-3">
                        <i class="bi bi-building me-2"></i>Detalhes da Conta
                    </h5>

                    <div class="row g-3 small text-secondary">
                        <div class="col-md-6 col-lg-4">
                            <label class="fw-semibold text-dark">Descrição/Nome:</label><br />
                            <span>@Account!.Description</span>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <label class="fw-semibold text-dark">Saldo Inicial:</label><br />
                            <span>@((Account!.Balance ?? 0m).ToString("C"))</span>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <label class="fw-semibold text-dark">Data de Abertura:</label><br />
                            <span>@(Account!.BalanceDate.ToString("dd/MM/yyyy"))</span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a href="/Account/List" class="btn btn-outline-secondary px-4">Voltar</a>
                        <button @onclick="Remove" type="button" class="btn btn-soft-danger px-4">
                            <i class="ri-delete-bin-line"></i>Excluir Conta
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter] public int Id { get; set; }
    private Account Account { get; set; } = new();

    protected override async Task OnParametersSetAsync()
    {
        var account = await AccountRepository.Get(Id);
        if (account is not null)
            Account = account;
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (Account.Id == 0)
            {
                await JS.InvokeVoidAsync("ShowToast", "Alerta", "Conta não encontrada!", "warning", "/Account/List");
                return;
            }
            var Company = await LocalStorage.GetItemAsync<Company>(AppConstants.LocalStorageCompany);
            if (Account!.CompanyId != Company!.Id)
            {
                await JS.InvokeVoidAsync("ShowToast",
                "Alerta.", $"A conta não pertence à empresa {Company.LegalName}", "warning", "/Account/List");
            }
        }
    }
    private async Task Remove()
    {
        //Salvar
        await AccountRepository.Delete(Account.Id);

        //Informar e redirecionar
        // Exibir toast e redirecionar depois que o usuário fechar
        await JS.InvokeVoidAsync("ShowToast",
        "Sucesso", "Conta excluída com sucesso!", "info", "/Account/List");
    }
}